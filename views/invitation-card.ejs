    <style>
        body {
            display: flex;
            font-family: 'PT Serif', serif;  
            font-size:30px;
            background: no-repeat center center fixed;
            background-size: cover;
        }
        #card-section{
            /* background-color: lavender; */
            flex-direction: column;
            width: 100%;
            height: 100vh;
            display: flex;
          justify-content: flex-start;
           align-items: center;
        }
        h3 {
            font-weight: 700;
            font-size: 130px;
            color:rgb(46, 65, 57);
        }
        h4 {
            font-size: 70px;
            text-transform: capitalize;
        }
        p {
            font-size: 45px; 
            font-weight: 600;
        }
        h4, p {
            color:rgb(92, 133, 116);
            -webkit-text-stroke: 1px rgb(3, 2, 2);
        }
        .weddingPicture {
            background-color: blueviolet;
        }
        .birthdayPicture {
            background-color: brown;
        }
    </style>
    <title>Invitation Card</title>
</head>
<body>
    <section id="card-section">
        <h3> <%= greeting %> </h3><br> 

    <% if (event == 'wedding') { %>
        <h4>You are invited to our <%= event %> </h4> 
    <style>body {background-image:url(https://images.unsplash.com/photo-1525441273400-056e9c7517b3?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);} </style>
    <% } else if (event == 'birthday') { %>
        <h4>You are invited to our <%= event %> </h4>
    <style>body { background-image:url(https://images.unsplash.com/photo-1486427944299-d1955d23e34d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);}</style>
    <% } else { %>
        <h4>You are invited to our <%= event %> </h4>
            <style>body {background-image:url(https://images.unsplash.com/photo-1484619817839-dfc3452be01f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=967&q=80);}</style>
    <% } %>

    <p><%= message %> </p>
    </section>
